<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/retoucheLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Retouche">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/retoucheImageConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="581dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.xiaopo.flying.sticker.StickerView
            android:id="@+id/sticker_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!-- custom, maybe you will like to put an ImageView-->
            <ImageView
                android:id="@+id/retoucheImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.xiaopo.flying.sticker.StickerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/useAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/retoucheImageConstraintLayout"
        app:layout_constraintVertical_bias="0.844"
        app:srcCompat="@drawable/ic_rotate_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/useLightSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734"
        app:srcCompat="@drawable/ic_light" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retoucheImageConstraintLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/eyes"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:onClick="onStickClick"
                app:srcCompat="@drawable/ic_eye" />

            <ImageView
                android:id="@+id/mustache"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:onClick="onStickClick"
                app:srcCompat="@drawable/ic_moustache" />

            <ImageView
                android:id="@+id/monocle"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onStickClick"
                app:srcCompat="@drawable/ic_monocle" />
        </LinearLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>